<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginSystemPowerCode.Pages.Perfil"
             Title=""
             BackgroundColor="#A6E8EB">
    <ScrollView>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Frame WidthRequest="700"
                   Margin="0"
                   HeightRequest="550"
                   BackgroundColor="LightBlue"
                   BorderColor="Black"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">

                <Grid ColumnDefinitions="Auto, *, Auto"
                      RowDefinitions="Auto, Auto, Auto, Auto"
                      Padding="10">
                    <Image Source="fotoperfil.png"
                           WidthRequest="100"
                           HeightRequest="100"
                           Aspect="AspectFill"
                           Grid.Column="0"
                           Grid.Row="0"
                           VerticalOptions="Start"
                           HorizontalOptions="Start"/>

                    <VerticalStackLayout Grid.Column="1"
                                         Grid.Row="0"
                                         VerticalOptions="Start"
                                         HorizontalOptions="Start"
                                         Margin="10,0,0,0">

                        <Label x:Name="lblUsuario"
                               Text="Nombre usuario"
                               FontSize="20"
                               HorizontalOptions="Start"/>

                        <Label x:Name="lblDescripcion"
                               Text="Descripción del usuario"
                               FontSize="16"
                               HorizontalOptions="Start"/>

                    </VerticalStackLayout>

                    <Frame WidthRequest="200"
                           HeightRequest="50"
                           Grid.Column="2"
                           Grid.Row="0"
                           BorderColor="Black"
                           BackgroundColor="AliceBlue"
                           Padding="10"
                           VerticalOptions="Start"
                           HorizontalOptions="End"
                           Margin="20,0,0,0">

                        <VerticalStackLayout>
                            <Label x:Name="lblSueldoActual"
                                   Text="Saldo actual: 100 €"
                                   FontSize="18"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <VerticalStackLayout Grid.Column="2"
                                         Grid.Row="1"
                                         WidthRequest="200"
                                         HorizontalOptions="End"
                                         Margin="20,-30,0,0"
                                         Spacing="10">
                        
                        <Button x:Name="btnEditarNombre"
                                Text="Editar nombre"
                                HorizontalOptions="Center"
                                VerticalOptions="Start"/>

                        <Button x:Name="btnCambiarPassword"
                                Text="Cambiar contraseña"
                                HorizontalOptions="Center"
                                VerticalOptions="Start"/>
                    </VerticalStackLayout>
                    
                    <!-- Frame estadisticas -->
                    <Frame WidthRequest="400"
                           HeightRequest="60"
                           Grid.Column="0"
                           Grid.ColumnSpan="3"
                           Grid.Row="1"
                           BackgroundColor="WhiteSmoke"
                           BorderColor="Gray"
                           Padding="10"
                           Margin="0,10,0,0"
                           HorizontalOptions="Start"
                           VerticalOptions="Start">

                        <Grid ColumnDefinitions="*, *">

                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="Cantidad juegos"
                                       FontAttributes="Bold"/>
                                <Label Text="0 juegos"
                                       HorizontalOptions="Start"
                                       Margin="20,0,0,0"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Horas jugadas"
                                       FontAttributes="Bold"/>
                                <Label Text="120 horas"
                                       Margin="15,0,0,0"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- Juegos comprados -->
                    <Frame WidthRequest="400"
                            HeightRequest="280"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Grid.Row="2"
                            BackgroundColor="WhiteSmoke"
                            BorderColor="Gray"
                            Padding="10"
                            Margin="0,10,0,0"
                            HorizontalOptions="Start"
                            VerticalOptions="Start">

                        <ScrollView>
                            <VerticalStackLayout Spacing="5">
                                <Frame HeightRequest="60" CornerRadius="20">
                                    <HorizontalStackLayout Spacing="10"
                                                           HorizontalOptions="FillAndExpand">
                                        <Image Source="logolol.png"
                                               WidthRequest="60"
                                               HeightRequest="45"
                                               Aspect="AspectFit"
                                               HorizontalOptions="Start"
                                               Margin="-25,0,0,0"/>

                                        <VerticalStackLayout HorizontalOptions="StartAndExpand">
                                            <Label Text="League of Legends"
                                                   FontSize="14"
                                                   HorizontalOptions="Center"/>
                                        </VerticalStackLayout>

                                        <Label Text="120 horas"
                                               HorizontalOptions="EndAndExpand"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                </Frame>
                            </VerticalStackLayout>
                        </ScrollView>

                    </Frame>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>